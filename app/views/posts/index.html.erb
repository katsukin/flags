<h2>
  <%= link_to '[記事を書く]',new_post_path, class: 'header-menu' %>
  つい出来心で(´. .̫.`)
</h2>
<h3>Sailing Ships</h3>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
      <%= link_to '[削除]',
      post_path(post),
      method: :delete,
      class: 'command',
      data: {confirm: '消していいと？' } %>
      <%= link_to '[編集]', edit_post_path(post), class: 'command' %>
    </li>
  <% end %>
</ul>

<h3>Submarine</h3>
<ul>
  <% @drafts.each do |draft| %>
    <li>
      <%= link_to draft.title, draft_path(draft)%>
      <%= link_to '[削除]',
      draft_path(draft),
      method: :delete,
      class: 'command',
      data: {confirm: '消していいと？' } %>
      <%= link_to '[編集]', edit_draft_path(draft), class: 'command' %>
    </li>
  <% end %>
</ul>
